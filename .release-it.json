{
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": false
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--access", "public"]
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": [
      "npm run typecheck",
      "npm test"
    ],
    "after:bump": [
      "npm run generate:types",
      "npm run build"
    ]
  }
}